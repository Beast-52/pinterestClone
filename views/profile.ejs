<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.6.0/fonts/remixicon.css" rel="stylesheet">
    <title>Pintrest | <% user.username %> </title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/feedback.css">
  </head>
  <body>
    
    <nav>
      <div class="logo">
      <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="img1" />
      </div>
      <ul class="links" >
        <%if(user){ %>
          <li class="link"><a href="/feedback">Feeds</a></li>
        <li class="link"><a href="/logout">Log Out</a></li>
  
        <% } else{ %>
          <li class="link"><a href="/login">Sign In</a></li>
        <li class="link"><a href="/">Sign Up</a></li>
        <% } %>
      
      </ul>
    </nav>
    <div class="containerper">
      <form action="/fileupload" method="post" hidden enctype="multipart/form-data" id="uploadForm">
        <input type="file" name="image">
      </form>
        <div class="cardper">
          <div class="prof-det">
            <span class="icon" id="profile-icon">
            <i class="ri-pencil-fill" ></i>
          </span>
          <div class="profile-picture" style="display:flex;">
            <% if(user.profileImg===undefined){ %>
              <div class="uploadImg">Please Upload Img</div>
              <%} %>
              
            <img src="/images/uploads/<%= user?.profileImg %>">
              
          </div>
        </div>
          <h2 class="name"><%= user.fullname %></h2>
          <h3 class="username">@<%= user.username %></h3>
          <p class="tagline">Keep going.</p>
          <p class="description">Very Confident Web developer</p>
          <a href="/logout" class="button">Logout</a>

          <form  action="/upload" method="post" enctype="multipart/form-data">
            <div style="display: flex;
            gap: 2px;">
            <input type="text" style="padding: 5px;color: black !important;" placeholder="some caption here..." name="filecaption" id="">
            <input name="file" type="file" id="selectedFile" style="display: none;" />
<input type="button" value="Browse..." class="btn btn-success" onclick="document.getElementById('selectedFile').click();" />
</div>
            <button class="btn btn-outline-success" type="submit">Upload</button>
          </form>
        </div>

        <div class="container1">
          <% user.posts.forEach(function(post){ %>  
            
            <div class="content-wrapper">
              <div class="image-wrapper">
                <div class="overlay">
                <div>
                  <p><%=user.username %></p>
                  <a style="text-decoration: none;" href="/download" class="save">Save</a>
                </div>
                <div>
                  <button class="spheric-button">
                    twitter.com
                  </button>
                  <button class="round-button">
                    <img src="https://cdn-icons-png.flaticon.com/512/3580/3580382.png" alt="">
                  </button>
                  <button class="round-button">
                    <img src="https://cdn-icons-png.flaticon.com/512/512/512142.png" alt="">
                  </button>
                </div>
              </div>
                 <img src="/images/uploads/<%= post.image %>" alt="">
              </div>
              <p><%= post.imageText %></p>
            </div>
         
          <% })%>
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
      var icon = document.getElementById('profile-icon');
      icon.addEventListener('click',()=>{
        document.querySelector('#uploadForm input').click();
      })
      
      document.querySelector('#uploadForm input').onchange = function(){
        document.querySelector('#uploadForm').submit();
      }
    </script>
<% include ./partials/footer.ejs  %>